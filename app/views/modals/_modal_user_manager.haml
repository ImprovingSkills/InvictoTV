#modal_user_manager.modal.fade
  .modal-dialog
    .modal-content
      .modal-body
        %button.close{'data-dismiss' => 'modal'} ×
        %ul.nav.nav-tabs.nav-justified{ role: 'tablist' }
          %li.active{role: 'presentation'}
            %a{'aria-controls' => 'modal_user_sign_in', 'data-toggle' => 'tab', href: '#modal_user_sign_in', role: 'tab'}
              = image_tag('invicto_avatar.png')
              .tab-title
                usuario registrado
          %li{role: 'presentation'}
            %a{'aria-controls' => 'modal_user_sign_up', 'data-toggle' => 'tab', href: '#modal_user_sign_up', role: 'tab'}
              = image_tag('invicto_avatar.png')
              .tab-title
                nuevo usuario
        .tab-content
          #modal_user_sign_in.tab-pane.active{ role: 'tabpanel' }
            .row
              .col-xs-10.col-xs-offset-1
                = simple_form_for(@user, url: session_path(@user)) do |f|
                  .field
                    = f.input :email, autofocus: true, class: 'form-control', placeholder: 'E-mail', label: false
                  .field
                    = f.input :password, autocomplete: 'off', class: 'form-control', placeholder: 'Contraseña', label: false
                  .modal-footer
                    = link_to "Facebook Login", user_facebook_omniauth_authorize_path
                    = f.submit 'Ingresar', class: 'btn btn-blue btn-big'
          #modal_user_sign_up.tab-pane{role: 'tabpanel'}
            .row
              .col-xs-10.col-xs-offset-1
                = simple_form_for(@user, url: registration_path(@user)) do |f|
                  .field
                    = f.input :email, class: 'form-control', placeholder: 'E-mail', required: true, label: false
                  .field
                    = f.input :password, autocomplete: 'off', class: 'form-control', placeholder: 'Contraseña', required: true, label: false
                  .field
                    = f.input :password_confirmation, autocomplete: 'off', class: 'form-control', placeholder: 'Confirma tu contraseña', required: true, label: false
                    = f.simple_fields_for :profile, @user.profile do |p|
                      .field
                        = p.input :first_name, label: false, required: true, placeholder: 'Nombre'
                      .field
                        = p.input :last_name, label: false, required: true, placeholder: 'Apellido'
                      .field
                        = p.input :username, label: false, required: true, placeholder: 'Nombre de Usuario'
                      .field
                        = p.input :gender, label: false, required: false, placeholder: 'Sexo', include_blank: false, input_html: { class: 'default-select' }
                      .field
                        = p.input :avatar, label: false, as: :file, input_html: {class: 'input-file'}
                      .field
                        = p.input :cover, label: false, as: :file, input_html: {class: 'input-file'}
                  .modal-footer
                    = f.button :submit , inline_label: 'Guardar', class: 'btn btn-blue btn-big', value: 'Registrar'
